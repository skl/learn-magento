<config>
    <modules>
        <Skl_Weblog>
            <version>0.1.0</version>
        </Skl_Weblog>
    </modules>

    <global>
        <models>
            <weblog>
                <class>Skl_Weblog_Model</class>
                <resourceModel>weblog_resource</resourceModel>
            </weblog>

            <weblog_resource>
                <class>Skl_Weblog_Model_Resource</class>
                <entities>
                    <blogpost>
                        <table>blog_posts</table>
                    </blogpost>
                </entities>
            </weblog_resource>
        </models>
    </global>

    <frontend>
        <routers>
            <weblog>
                <use>standard</use>
                <args>
                    <module>Skl_Weblog</module>
                    <frontName>weblog</frontName>
                </args>
            </weblog>
        </routers>
    </frontend>
</config>
